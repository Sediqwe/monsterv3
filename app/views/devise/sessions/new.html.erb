<div class="bg-info p-2">
  <h2>Belépés</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input  :remember_me, as: :boolean , label: "Emlékezz rám (ha bejelölöd, odabaszok a gépedre egy cookie-t )" if devise_mapping.rememberable? %> 
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Belépés" , class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
